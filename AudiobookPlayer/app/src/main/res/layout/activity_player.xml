<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".activities.PlayerActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:theme="@style/ThemeOverlay.Material3.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Now Playing"
        app:titleTextColor="@color/white" />

    <!-- Book Cover/Icon -->
    <TextView
        android:id="@+id/tvBookIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_background_primary"
        android:gravity="center"
        android:text="ðŸ“–"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <!-- Book Title -->
    <TextView
        android:id="@+id/tvBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBookIcon"
        tools:text="How To Win Friends and Influence People" />

    <!-- Author -->
    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="@+id/tvBookTitle"
        app:layout_constraintStart_toStartOf="@+id/tvBookTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvBookTitle"
        tools:text="Dale Carnegie" />

    <!-- Chapter Info -->
    <TextView
        android:id="@+id/tvChapterInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="@+id/tvAuthor"
        app:layout_constraintStart_toStartOf="@+id/tvAuthor"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
        tools:text="Chapter 1 of 12" />

    <!-- Progress Section -->
    <LinearLayout
        android:id="@+id/progressSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChapterInfo">

        <!-- Time Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary"
                tools:text="02:35" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary"
                tools:text="25:42" />

        </LinearLayout>

        <!-- Progress Bar -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progressTint="@color/primary"
            android:thumbTint="@color/primary"
            tools:progress="15" />

    </LinearLayout>

    <!-- Playback Speed -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpeed"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1.0x"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="@+id/progressSection"
        app:layout_constraintTop_toBottomOf="@+id/progressSection" />

    <!-- Media Controls -->
    <LinearLayout
        android:id="@+id/mediaControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSpeed">

        <!-- Previous Chapter -->
        <ImageButton
            android:id="@+id/btnPreviousChapter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous Chapter"
            android:src="@drawable/ic_skip_previous"
            app:tint="@color/text_primary" />

        <!-- Rewind 30s -->
        <ImageButton
            android:id="@+id/btnRewind"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rewind 30 seconds"
            android:src="@drawable/ic_replay_30"
            app:tint="@color/text_secondary" />

        <!-- Play/Pause -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:contentDescription="Play/Pause"
            android:src="@drawable/ic_play"
            app:backgroundTint="@color/primary"
            app:tint="@color/white" />

        <!-- Forward 30s -->
        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Forward 30 seconds"
            android:src="@drawable/ic_forward_30"
            app:tint="@color/text_secondary" />

        <!-- Next Chapter -->
        <ImageButton
            android:id="@+id/btnNextChapter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next Chapter"
            android:src="@drawable/ic_skip_next"
            app:tint="@color/text_primary" />

    </LinearLayout>

    <!-- Additional Controls -->
    <LinearLayout
        android:id="@+id/additionalControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mediaControls">

        <!-- Volume/Mute -->
        <ImageButton
            android:id="@+id/btnVolume"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volume"
            android:src="@drawable/ic_volume_up"
            app:tint="@color/text_secondary" />

        <!-- Sleep Timer -->
        <ImageButton
            android:id="@+id/btnSleepTimer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Sleep Timer"
            android:src="@drawable/ic_timer"
            app:tint="@color/text_secondary" />

        <!-- Bookmark -->
        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Bookmark"
            android:src="@drawable/ic_bookmark_border"
            app:tint="@color/text_secondary" />

    </LinearLayout>

    <!-- Chapter List (Collapsed by default) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChapters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additionalControls"
        tools:listitem="@layout/item_chapter" />

</androidx.constraintlayout.widget.ConstraintLayout>