# Environment Variables Template
# Copy this to .env for local development
# For Heroku, set these using: heroku config:set VAR_NAME=value

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Azure Speech Services (Microsoft TTS)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Database (automatically set by Heroku PostgreSQL addon)
# DATABASE_URL=postgres://username:password@host:port/database

# AWS S3 Storage (automatically set by Bucketeer addon)
# BUCKETEER_AWS_ACCESS_KEY_ID=auto_set_by_heroku
# BUCKETEER_AWS_SECRET_ACCESS_KEY=auto_set_by_heroku  
# BUCKETEER_BUCKET_NAME=auto_set_by_heroku

# Map Bucketeer env vars to our expected names
AWS_ACCESS_KEY_ID=${BUCKETEER_AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${BUCKETEER_AWS_SECRET_ACCESS_KEY}
S3_BUCKET_NAME=${BUCKETEER_BUCKET_NAME}

# App Configuration
PORT=5000
FLASK_ENV=production